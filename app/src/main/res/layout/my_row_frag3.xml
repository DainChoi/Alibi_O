<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="김용석"
                android:textAlignment="center"
                android:textColor="#4C4B4B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_text">

                <EditText
                    android:id="@+id/sun_in"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="09:00"
                    android:textAlignment="center"
                    android:textColor="#E61010"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/mon_in"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tue_in"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="09:00"
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/wed_in"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="09:30"
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/thu_in"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/fri_in"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/sat_in"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="13:00"
                    android:textAlignment="center"
                    android:textColor="#1717EC"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


                <EditText
                    android:id="@+id/sun_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="16:00"
                    android:textAlignment="center"
                    android:textColor="#E61010"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/mon_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tue_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="15:00"
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/wed_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="15:30"
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/thu_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/fri_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#4C4B4B"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/sat_out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="time"
                    android:text="18:00"
                    android:textAlignment="center"
                    android:textColor="#1717EC"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/btn_modify2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>